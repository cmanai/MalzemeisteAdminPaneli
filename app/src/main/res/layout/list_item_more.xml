<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fancy="http://schemas.android.com/apk/res-auto"

                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"

                android:clickable="true"
                tools:ignore="RtlHardcoded">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

        <ImageView
                android:foregroundGravity="center"
                android:id="@+id/arrow_expand_imageview"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"

                android:clipToPadding="false"

                android:scaleType="centerInside"
                android:tint="@color/md_white_1000"
                android:layout_marginRight="17dp"
                android:src="@drawable/selector_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/name_more"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:visibility="visible"
                android:clickable="true"

                android:elevation="0dp"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:paddingRight="20dp"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="@color/primary_light"
                fancy:fb_focusColor="@color/primary_light"
                fancy:fb_iconPosition="left"
                android:gravity="center"
                fancy:fb_radius="30dp"
                fancy:fb_text="Test"

                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="16sp"
                />
        <!-- <TextView
                 android:id="@+id/name_more"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_gravity="left"
                 android:layout_marginLeft="16dp"
                 android:layout_marginEnd="50dp"
                 android:layout_marginStart="16dp"
                 android:textStyle="bold"
                 android:text="See More"
                 android:textColor="@color/colorPrimary"
                 android:textSize="17sp"
                 tools:ignore="HardcodedText,RtlHardcoded"/>-->


    </RelativeLayout>

</RelativeLayout>
